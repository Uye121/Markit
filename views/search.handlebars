<!doctype html>

<html>
<head>
	<title>Markit</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/style.css" rel="stylesheet">
	<link href="css/bootstrap.css" rel="stylesheet">
	<script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
</head>
<body>

	<div class="container">
		<form id="searchProduct" role="form" method="get" action="/search">
			Enter product name, categories, or keywords<br>
	    	<div class="form-group">
	      	<input type="text" class="form-control" id="txtSearch" placeholder="Search..." name="txtSearch">
	    	</div>
	    	<input type="submit" id="submitBtn" class="btn btn-primary" value="Search"></input>
		</form>
	</div>

	<div class="container">
	{{#if searchFound}}
		{{#each res}}
		<div class="name">
			<img src="{{imageURL}}" class="img-responsive">
			<h3>{{name}}</h3>
			<h1>rating: {{rating}}</h1>
		</div>
		{{/each}}
	{{else}}
		{{#if searchInit}}
			<p>{{searchWord}} not found.</p>
		{{/if}}
	{{/if}}
	</div>

	<nav id="navbar">
		<ul>
			<li><a href="#">Home</a></li>
			<li><a href="#">About</a></li>
			<li><a href="#">Services</a></li>
			<li><a href="#">Contact</a></li>
		</ul>
	</nav>
	
	<div class="search-results"></div>
	<script src="js/bootstrap.js"></script>
	<script src="js/result.js"></script>

</body>
</html>
